}

model User {
  id             Int       @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String
  username       String    @unique
  password       String
  phoneNumber    String?
  dateOfBirth    DateTime?
  roleId         Int
  role           Role      @relation(fields: [roleId], references: [id])
